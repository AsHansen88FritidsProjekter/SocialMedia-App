<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialMedia_App</title>
    <link href="~/images/favicon.png" rel=" icon" type="image/svg"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialMedia_App.styles.css" asp-append-version="true" />
</head>
<body>
    <div id ="wrapper">
        
        @* TopBar *@

        <header class="z-[100] h-[--m-top] fixed top-0 left-0 w-full flex items-center bg-white/80 bg-sky-50
           backdrop-blur-xl border-b border-slate-200">

        <div class="2xl:w-[--w-side] lg:w-[--w-side-sm]">

            <div class=" d-xl-flex items-center gap-1">

                <button uk-toggle="target: #site__sidebar ; cls :!-translate-x-0"
                class="flex items-center justify-center w-8 h-8 text-xl roundedh-full hover:bg-gray-100 xl:hidden group">
                <ion-icon name="menu-outline" class="text-2xl group-aria-expanded:hidden"></ion-icon>
                <ion-icon name="close-outline" class="hidden text-2xl group-aria-expanded:blocxk"></ion-icon>
                </button>
            
            <div id="logo" class="flex items-center">
                        <a class="flex items-center">
                            <img src="~/images/logo.png" class="w-10 md:block hidden" />
                            <span class="ml-2">Social media App</span>

                </a>
            </div>
            </div>
            
            <div class="flex-1 relative">
                <div class="max-w-[1220px] mx-auto flex items-center">
                    <form id="search--box" 
                    class="xl:w-[680px] sm:w-96 sm:relative rounded-xl overflow-hidden z-20 bg-
                        secondery max-md:hidden w-screen left-0 max-sm:fixed max-sm:top-2">
                    
                    <ion-icon name="search" class="position-absolute left=4 top-1\/2 -translate-x-1\/2"></ion-icon>
                    <input type="text" name="query" placeholder="search, Freinds..." class="w-full 
                      !pl-10 !font-normal !bg-translatre h-12 !text-sm"/>
                    </form>

                    <div class="flex items-center sm:gap-4 gap-2 absolute right-5 top-1/2 -translate-y-1/2
                     text-black">
                     
                    @* notification icon *@

                    <button type="button" class="sm:p-2 p-1 rounded-full relative sm:bg-secondery">

                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="24"
                                     height="24"
                                     viewBox="0 0 24 24"
                                     fill="none"
                                     stroke="#000000"
                                     stroke-width="2"
                                     stroke-linecap="round"
                                     stroke-linejoin="round">
                                    <path d="M18 8A6 6 0 006 8c0 7-3 9-3 9h18s-3-2-3-9" />
                                    <path d="M13.73 21a2 2 0 01-3.46 0" />
                                    <path d="M2 8c0-2.2.7-4.3 2-6" />
                                    <path d="M22 8a10 10 0 00-2-6" />
                                </svg>

                                <div class="absolute top-0 right-0 -m-1 bg-red-600 text-white text-xs px-1 
                                   rounded-full" id="notificationsCount">0</div>
                            </button>

                                <div class="hidden bg-white pr-1.5 rounded-lg drop-shadow-xl md:w-[365px] w-screen
                                     border2" uk-drop="offset:6;pos:bottom-right; mode: click; animate-out: true;"></div>

                                <div class="flex items-center justify-between gap-2 p-4 pb-2">
                                    <h3 class="font-bold text-xl">Notifications</h3>
                                </div>
                                <div class="text-sm h-[400px] w-full overflow-y-auto pr-2">
                                    <div class="pl-2 pl-1 text-sm font-normal" id="notification-dropdown">
                                        No notifications...

                                    </div>
                                </div>



                    @* profile icon *@

                    <button type="button"></button>
                    <div></div>

                    </div>
                </div>
                
                @* search *@
               
               

            </div>
        </div>
       
       </header>

        @* Side Bar (left) *@
        
        @RenderBody()
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Asset scripts *@
    <script src="~/js/uikit.min.js"></script>
    <script src="~/js/simplebar.js"></script>
    <script src="~/js/script.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
